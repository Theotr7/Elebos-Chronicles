<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Elebos Chronicles
			{% endblock %}
		</title>
		{% block stylesheets %}
			<link rel="stylesheet" href="{{ asset('styles/card.css') }}">
			<link rel="stylesheet" href="{{ asset('styles/booster.css') }}">
			<link rel="stylesheet" href="{{ asset('styles/global.css') }}">
			<link rel="stylesheet" href="{{ asset('styles/home.css') }}">
			<link rel="stylesheet" href="{{ asset('styles/collection.css') }}">
			<link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;700&family=Playfair+Display:ital,wght@0,400;0,700;1,400&family=Merriweather:wght@400;700&display=swap" rel="stylesheet">
		{% endblock %}
	</head>
	<body>

		<header class="site-header">
			<div class="logo-container">
				<img src="{{ asset('images/logo-elebos.png') }}" alt="Elebos Chronicles Logo" class="site-logo"/>
				<div class="logo-text">
					<h1 class="site-title">Elebos Chronicles</h1>
					<p class="site-slogan">The Card Game</p>
				</div>
			</div>

			<nav class="main-nav">
				<a href="{{ path('home') }}">Accueil</a>

				{% if app.user %}
					{# Si l'utilisateur n'est PAS admin => affichage joueur uniquement #}
					{% if not is_granted('ROLE_ADMIN') %}
						<a href="{{ path('booster_index') }}">Nos boosters</a>
						<a href="{{ path('my_boosters') }}">Mes boosters</a>
						<a href="{{ path('user_collection') }}">Ma collection</a>
					{% endif %}

					{# Affichage des liens admin uniquement pour les admins #}
					{% if is_granted('ROLE_ADMIN') %}
						<a href="{{ path('admin_card_index') }}">
							<img src="{{ asset('icons/admin/admin.png') }}" alt="Admin" style="height: 3rem; vertical-align: middle; margin-right: 4px;">
							Admin Cartes
						</a>
						<a href="{{ path('admin_booster_index') }}">
							<img src="{{ asset('icons/admin/admin.png') }}" alt="Admin" style="height: 3rem; vertical-align: middle; margin-right: 4px;">
							Admin Boosters
						</a>
					{% endif %}

					<a href="{{ path('app_logout') }}">Déconnexion</a>
				{% else %}
					<a href="{{ path('app_login') }}">Connexion</a>
					<a href="{{ path('app_register') }}">Inscription</a>
				{% endif %}
			</nav>

		</header>

		<main>
			{% block body %}{% endblock %}
		</main>

		<footer class="site-footer">
			<div
				class="footer-container">

				<!-- Colonne gauche : Réseaux sociaux -->
				<div class="footer-col">
					<p class="footer-title">Suivez-nous</p>
					<div class="social-icons">
						<a href="#"><img src="{{ asset('icons/discord.png') }}" alt="Discord"/></a>
						<a href="#"><img src="{{ asset('icons/instagram.png') }}" alt="Instagram"/></a>
						<a href="#"><img src="{{ asset('icons/twitter.png') }}" alt="X"/></a>
					</div>
				</div>

				<!-- Colonne centre : Infos -->
				<div class="footer-col center">
					<h3 class="footer-game-title">Elebos Chronicles</h3>
					<p class="footer-slogan">The Card Game — Collectionnez, combattez, légendez.</p>
					<p class="footer-copy">&copy;
						{{ "now"|date("Y") }}
						Elebos Chronicles</p>
				</div>

				<!-- Colonne droite : Navigation -->
				<div class="footer-col">
					<p class="footer-title">Navigation</p>
					<ul class="footer-links">
						<li>
							<a href="{{ path('home') }}">Accueil</a>
						</li>
						{% if app.user %}
							<li>
								<a href="{{ path('booster_index') }}">Mes boosters</a>
							</li>
							<li>
								<a href="{{ path('user_collection') }}">Ma collection</a>
							</li>
						{% else %}
							<li>
								<a href="{{ path('app_login') }}">Connexion</a>
							</li>
							<li>
								<a href="{{ path('app_register') }}">Inscription</a>
							</li>
						{% endif %}
					</ul>
				</div>

			</div>
		</footer>


		{% block javascripts %}{% endblock %}
	</body>
</html>
